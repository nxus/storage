{
  "name": "nxus-storage",
  "version": "3.0.0-0",
  "description": "Storage framework for Nxus applications",
  "main": "lib/",
  "scripts": {
    "test": "NODE_ENV=test mocha --compilers js:babel-core/register -R spec",
    "compile": "babel src --out-dir lib ",
    "prepublish": "npm run compile",
    "postpublish": "npm run docs-readme && npm run commit-update-docs",
    "docs-readme": "export NAME=`npm view . name`; export VERSION=`npm view . version`; documentation readme ./src/*.js --name $NAME --project-version $VERSION --readme-file ./README.md -s $NAME",
    "commit-update-docs": "git add ./README.md && git commit -m 'Updated README API Docs' && git push"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/nxus/storage.git"
  },
  "keywords": [
    "nxus",
    "storage",
    "orm",
    "waterline"
  ],
  "author": "mjreich",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nxus/storage/issues"
  }, 
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "homepage": "https://github.com/nxus/storage",
  "dependencies": {
    "bluebird": "^3.0.6",
    "traverse": "^0.6.6",
    "underscore": "^1.8.3",
    "waterline": "^0.12.2",
    "waterline-sqlite3": "^1.0.0"
  },
  "peerDependencies": {
    "nxus-core": "^3.0.0-0"
  },
  "devDependencies": {
    "documentation": "^4.0.0-beta",
    "chai": "^3.4.1",
    "chai-as-promised": "^5.1.0",
    "mocha": "^2.2.5",
    "should": "^7.0.2",
    "sinon": "^1.17.2",
    "babel-preset-es2015": "^6.9.0",
    "babel-cli": "^6.9.0",
    "sails-memory": "^0.10.5",
    "babel-core": "^6.9.0"
  }
}
